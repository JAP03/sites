$(function() {
	
		// clear default form field //
		
		jQuery.fn.cleardefault = function() {
			return this.focus(function() {
				if( this.value == this.defaultValue ) {
					this.value = "";
				}
			}).blur(function() {
				if( !this.value.length ) {
					this.value = this.defaultValue;
				}
			});
		};
		
		
		(function ($) {
			// VERTICALLY ALIGN FUNCTION
			$.fn.vAlign = function() {
				return this.each(function(i){
				var ah = $(this).height();
				var ph = $(this).parent().height();
				var mh = (ph - ah) / 2;
				$(this).css('margin-top', mh);
				});
			};
			})(jQuery);
		
		jQuery("form.clearme input").cleardefault();
		
		if ( $('div.compare').length > 0 ) {
			var leftMargin = ($('div#centering-content-wrapper').outerWidth() - $('div.compare div.button p a').outerWidth()) / 2;
			$('div.compare div.button p').css({ 'margin-left' : leftMargin } );
		}
		
		if ( $('#subnav div.button').length > 0 ) {
		
			$('#subnav div.button').css({'margin-left' : 0});
		
			var leftMargin = ($('div#subnav ul li a').width() - $('#subnav div.button p a').outerWidth()) / 2;
			$('#subnav div.button p').css({ 'margin-left' : leftMargin + 10 } );
		
		}
		
		if ( $('#content-feature div.button').length > 0 ) {
		
			 $('#content-feature div.button').css({'margin-left' : 0});
		
			var leftMargin = ($('div.clean-callout').width() - $('#content-feature div.button p a').outerWidth()) / 2;
			$('#content-feature div.button p').css({ 'margin-left' : leftMargin - 4 } );
		
		}

		// use this for images //
		setupZoom();
		
		// use this for flash //
		$('a.zoom-alt').fancyZoom({directory: 'http://service.prweb.com/_res/js/fancyzoom-alt/images/'});
		
		$('.print-article a').click(function(event) { window.print(); event.preventDefault(); return false; });
		
		$('#feature-header-text').vAlign();
		
		// remove the current country //
		var countryClass = $("#country-select dt").attr("class").split(/\s+/);
		
		$('#country-select dd ul li').each(function() {
			if ($(this).hasClass(countryClass)) {
				$(this).remove();
				return false;
			}
		})

		// add the dropdown
		$("#country-select dt").click(function(e) {
			$(this).css({ "cursor" : "pointer" });
			$("ul.dropdown").toggle();
			e.preventDefault();
			return false;
		});

		// remove the dropdown on click of the window //
		$(document).bind('click', function(e) {
			var $clicked = $(e.target);
			if (! $clicked.parents().hasClass("dropdown"))
				$("ul.dropdown").hide();
		});

	});